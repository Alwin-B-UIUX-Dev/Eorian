{
  "name": "eorian",
  "version": "1.0.0",
  "description": "Api E-commerce eorian with Node.js, Express and TypeScript",
  "main": "dist/server.js",
  "type": "module",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "lint": "biome check --write src",
    "lint:check": "biome check src",
    "format": "biome format --write src vitest.config.js",
    "format:check": "biome format src vitest.config.js",
    "validate": "biome ci src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "nodemon --exec tsx src/server.ts",
    "start": "node dist/server",
    "start:dev": "npm run build && npm start",
    "clean": "rm -rf dist",
    "pre-commit": "lint-staged"
  },
  "keywords": [
    "api",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/eslint-plugin-security": "^3.0.0",
    "@types/express": "^5.0.3",
    "@types/node": "^24.1.0",
    "@types/pg-promise": "^0.0.28",
    "@types/supertest": "^6.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "lint-staged": "^16.1.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3",
    "validate-branch-name": "^1.3.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "argon2": "^0.43.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "isomorphic-dompurify": "^2.26.0",
    "jose": "^6.0.11",
    "pg-promise": "^11.15.0",
    "ua-parser-js": "^2.0.4",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^4.0.5"
  },
  "lint-staged": {
    "src/**/*.{ts,js,html,css}": [
      "biome check --write"
    ]
  }
}
